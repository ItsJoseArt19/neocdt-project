{
  "name": "neocdt-backend",
  "version": "1.0.0",
  "description": "Backend API for NEOCDT Project with SQLite3",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "db:seed": "node src/database/seeds/runSeeds.js",
    "db:test-users": "node create-test-users.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/unit",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/integration",
    "sonar": "node sonar-scanner.cjs",
    "sonar:coverage": "npm test && npm run sonar",
    "analyze": "node analyze-code.cjs",
    "quality": "node evaluate-quality-attributes.cjs",
    "qa:full": "npm run analyze && npm run quality"
  },
  "keywords": [
    "api",
    "backend",
    "neocdt",
    "sqlite",
    "rest"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.0.2",
    "sonarqube-scanner": "^4.3.2",
    "supertest": "^6.3.3"
  }
}
